@model IEnumerable<JDRHelper.Models.H_PJ>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <input id="nom" type="text">
    <button id="btn">Chercher</button>
</div>

<table class="table" id="all">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Race)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Signe)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="perso" class="perso">
            <td class="details">
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td class="details">
                @Html.DisplayFor(modelItem => item.SexeNom)
            </td>
            <td class="details">
                @Html.DisplayFor(modelItem => item.Race.Nom)
            </td>
            <td class="details">
                @Html.DisplayFor(modelItem => item.Classe.Nom)
            </td>
            <td class="details">
                @Html.DisplayFor(modelItem => item.Signe.Nom)
            </td>
            <td id="liens" class="details">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@section div {
    @Scripts.Render("~/Scripts/Recherche")
}

